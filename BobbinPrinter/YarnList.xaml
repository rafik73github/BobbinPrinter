<Window x:Class="BobbinPrinter.YarnList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BobbinPrinter"
        mc:Ignorable="d"
        Title="YarnList" Height="640" Width="496" Top="100" Left="100" ResizeMode="NoResize" WindowStyle="None" Background="#FF362236">
    <Grid Height="609" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>

            

        </Grid.ColumnDefinitions>


        <Button x:Name="BackToMainMenuButton" Content="WRÓC DO GŁÓWNEGO PANELU" HorizontalAlignment="Center" Height="30" Margin="49,491,74,0" VerticalAlignment="Top" Width="348" FontSize="14" Click="BackToMainMenuButton_Click" Grid.Column="1"/>
        <Button x:Name="YarnListExitProgramButton" Content="ZAKOŃCZ PROGRAM" HorizontalAlignment="Center" Height="30" Margin="49,543,74,0" VerticalAlignment="Top" Width="348" FontSize="14" Click="YarnListExitProgramButton_Click" Grid.Column="1"/>

        
                <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="484" Margin="10,-8,0,0" VerticalAlignment="Top" Width="476" Background="#FF362236" >

            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid Name="Panel">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Panel" Property="Background" Value="Orange" />
                                        
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Panel" Property="Background" Value="#FF362236" />
                                       
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Header="LISTA PRZĘDZ" >
                <Grid>
                    <GroupBox x:Name="groupBox2" Header="LISTA PRZĘDZ" HorizontalAlignment="Center" Height="436" Margin="46,10,46,0" VerticalAlignment="Top" Width="378" FontSize="14" FontWeight="Bold" Foreground="#FFFFE800"/>
                    <ComboBox x:Name="FilterYarnComboBox" HorizontalAlignment="Center" Height="30" Margin="44,44,43,0" VerticalAlignment="Top" Width="344"/>
                </Grid>

            </TabItem>
            <TabItem Header="DODAWANIE PRZĘDZ">
                <Grid>
                    <GroupBox x:Name="groupBox" Header="DODAWANIE PRZĘDZ" HorizontalAlignment="Center" Height="355" Margin="27,10,29,0" VerticalAlignment="Top" Width="375" Foreground="#FFFFE800" BorderBrush="White" FontSize="14" FontWeight="Bold"/>
                    <ComboBox x:Name="SelectYarnMakerComboBox" HorizontalAlignment="Center" Height="30" Margin="40,46,43,0" VerticalAlignment="Top" Width="348"  VerticalContentAlignment="Center" FontSize="14" ToolTip="wybierz producenta przędzy"/>
                    <ComboBox x:Name="SelectYarnTypeComboBox" HorizontalAlignment="Center" Height="30" Margin="40,99,43,0" VerticalAlignment="Top" Width="348"  VerticalContentAlignment="Center" FontSize="14" ToolTip="wybierz typ przędzy"/>
                    <ComboBox x:Name="SelectYarnSizeComboBox" HorizontalAlignment="Center" Height="30" Margin="40,151,43,0" VerticalAlignment="Top" Width="348"  VerticalContentAlignment="Center" FontSize="14" ToolTip="wybierz grubość przędzy"/>
                    <TextBox x:Name="AddColorNameTextBox" HorizontalAlignment="Center" Height="30" Margin="40,200,43,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348" FontSize="14" VerticalContentAlignment="Center" ToolTip="wpisz kolor przędzy"/>
                    <Button x:Name="AddYarnButton" Content="DODAJ PRZĘDZĘ" HorizontalAlignment="Center" Height="30" Margin="40,310,43,0" VerticalAlignment="Top" Width="348" FontSize="14" Click="AddYarnButton_Click"/>
                </Grid>

            </TabItem>
            <TabItem Header="EDYCJA PRZĘDZ">

            </TabItem>
            <TabItem Header="PARAMETRY">
                <Grid>
                    <GroupBox x:Name="groupBox1" Header="DODAWANIE PRODUCENTA PRZĘDZY" HorizontalAlignment="Center" Height="131" Margin="0,10,0,0" VerticalAlignment="Top" Width="376" FontWeight="Bold" FontSize="14" Foreground="#FFFFE800"/>
                    <TextBox x:Name="AddMakerTextBox" HorizontalAlignment="Center" Height="30" Margin="62,35,60,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348" FontSize="14" VerticalContentAlignment="Center" ToolTip="wpisz producenta przędzy (np: FRAFIL)" />
                    <Button x:Name="AddMakerButton" Content="DODAJ PRODUCENTA" HorizontalAlignment="Center" Height="30" Margin="42,95,41,0" VerticalAlignment="Top" Width="348" FontSize="14" Click="AddMakerButton_Click" />
                    <GroupBox x:Name="groupBox1_Copy" Header="DODAWANIE TYPU PRZĘDZY" HorizontalAlignment="Center" Height="131" Margin="28,157,27,0" VerticalAlignment="Top" Width="376" FontWeight="Bold" FontSize="14" Foreground="#FFFFE800" />
                    <TextBox x:Name="AddTypeTextBox" HorizontalAlignment="Center" Height="30" Margin="42,184,41,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348" FontSize="14" VerticalContentAlignment="Center" ToolTip="wpisz typ przędzy (np: AB 50/50)" />
                    <Button x:Name="AddTypeButton" Content="DODAJ TYP" HorizontalAlignment="Center" Height="30" Margin="42,241,41,0" VerticalAlignment="Top" Width="348" FontSize="14" Click="AddTypeButton_Click"  />
                    <GroupBox x:Name="groupBox1_Copy1" Header="DODAWANIE GRUBOŚCI PRZĘDZY" HorizontalAlignment="Center" Height="131" Margin="28,305,29,0" VerticalAlignment="Top" Width="374" FontWeight="Bold" FontSize="14" Foreground="#FFFFE800" />
                    <TextBox x:Name="AddSizeTextBox" HorizontalAlignment="Center" Height="30" Margin="42,331,41,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348" FontSize="14" VerticalContentAlignment="Center" ToolTip="wpisz grubość przędzy (np: 32/2)" />
                    <Button x:Name="AddSizeButton" Content="DODAJ GRUBOŚĆ" HorizontalAlignment="Center" Height="30" Margin="42,391,41,0" VerticalAlignment="Top" Width="348" FontSize="14" Click="AddSizeButton_Click"  />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
