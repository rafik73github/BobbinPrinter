<Window x:Class="BobbinPrinter.YarnPrintPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BobbinPrinter"
        mc:Ignorable="d"
        Title="YarnPrintPanel" Height="640" Width="700" Top="100" Left="550" ResizeMode="NoResize" WindowStyle="None" Background="#FF362236">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="BackToMainMenuButton" Content="WRÓC DO GŁÓWNEGO PANELU" HorizontalAlignment="Center" Height="30" Margin="176,491,176,0" VerticalAlignment="Top" Width="348" FontSize="14" Click="BackToMainMenuButton_Click" FontWeight="Bold"/>
        <Button x:Name="YarnListExitProgramButton" Content="ZAKOŃCZ PROGRAM" HorizontalAlignment="Center" Height="30" Margin="176,543,176,0" VerticalAlignment="Top" Width="348" FontSize="14" Click="YarnListExitProgramButton_Click" FontWeight="Bold"/>

        <ComboBox x:Name="SelectYarnToPrintComboBox" HorizontalAlignment="Center" Height="30" Margin="48,55,348,0" VerticalAlignment="Top" Width="304"  VerticalContentAlignment="Center" FontSize="14" ToolTip="wybierz przędzę do wydruku" FontWeight="Bold">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                                    <Run Text="{Binding YarnColor}"/>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>

        </ComboBox>
        <TextBox x:Name="AddYarnLotToPrintTextBox" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="30" Margin="357,55,0,0" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center" ToolTip="wpisz lot przędzy" VerticalAlignment="Top" Width="115" RenderTransformOrigin="0.292,0.609" FontWeight="Bold"/>
        <TextBox x:Name="AddYarnBobbinAmountToPrintTextBox" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="30" Margin="477,55,0,0" FontSize="14" VerticalContentAlignment="Center" ToolTip="wpisz liczbę szpulek" TextWrapping="Wrap" VerticalAlignment="Top" Width="65" RenderTransformOrigin="0.292,0.609" FontWeight="Bold"/>
        <Button x:Name="AddYarnToPrintListButton" Content="DODAJ" HorizontalAlignment="Left" Margin="555,55,0,0" VerticalAlignment="Top" Width="123" Height="30" FontWeight="Bold" Click="AddYarnToPrintListButton_Click"/>
        <DataGrid x:Name="YarnsToPrintListView" AutoGenerateColumns="False" HorizontalAlignment="Center" Height="352" Margin="48,106,158,0" VerticalAlignment="Top" Width="494" CanUserResizeRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Width="304" FontSize="14" Header="KOLOR" Binding="{Binding YarnColor}" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Padding" Value="5,0,0,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="120" FontSize="14" Header="LOT" Binding="{Binding YarnLot}" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="0,0,5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="64" FontSize="14" Header="SZPULEK" Binding="{Binding YarnBobbinAmount}" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="0,0,5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="GenerateAndSavePdfToPrintButton" Content="ZAPISZ PDF" HorizontalAlignment="Left" Margin="589,492,0,0" VerticalAlignment="Top" Width="75" Height="30" FontWeight="Bold" Click="GenerateAndSavePdfToPrintButton_Click"/>
    </Grid>
</Window>
